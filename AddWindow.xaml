<Window x:Class="Team_project.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team_project"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="Title: " Margin="10" FontSize="14" FontWeight="Bold"/>
            <TextBox x:Name="titleTxtBox" Margin="10" FontSize="14" FontWeight="SemiBold"/>
            <TextBlock Text="Author: " Margin="10" FontSize="14" FontWeight="Bold"/>
            <TextBox x:Name="authorTxtBox" Margin="10" FontSize="14" FontWeight="SemiBold"/>
            <TextBlock Text="Price: " Margin="10" FontSize="14" FontWeight="Bold"/>
            <TextBox x:Name="priceTxtBox" Margin="10" FontSize="14" FontWeight="SemiBold"/>
        </StackPanel>

        <Border Grid.Row="1" CornerRadius="2" BorderThickness="1.8" BorderBrush="Black" Width="150" Margin="10">
            <Button Content="Добавить" FontSize="16" FontWeight="SemiBold" Click="newBookBtn_Click"/>
        </Border>
    </Grid>
</Window>
